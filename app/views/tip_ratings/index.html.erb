<div>
  <div>
    <h1>
      List of all tip ratings
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new tip rating
    </h2>

    <form action="/insert_tip_rating" method="post">
      <div>
        <label for="tip_id_box">
          Tip
        </label>

        <input type="text" id="tip_id_box" name="query_tip_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="rating_value_box">
          Rating value
        </label>

        <input type="text" id="rating_value_box" name="query_rating_value">
      </div>

      <button>
        Create tip rating
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Tip
        </th>

        <th>
          User
        </th>

        <th>
          Rating value
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_tip_ratings.each do |a_tip_rating| %>
      <tr>
        <td>
          <%= a_tip_rating.id %>
        </td>

        <td>
          <%= a_tip_rating.tip_id %>
        </td>

        <td>
          <%= a_tip_rating.user_id %>
        </td>

        <td>
          <%= a_tip_rating.rating_value %>
        </td>

        <td>
          <%= time_ago_in_words(a_tip_rating.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_tip_rating.updated_at) %> ago
        </td>

        <td>
          <a href="/tip_ratings/<%= a_tip_rating.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
