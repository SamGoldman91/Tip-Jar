<div>
  <div>
    <h1>
      List of all votes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new vote
    </h2>

    <form action="/insert_vote" method="post">
      <div>
        <input type="checkbox" id="vote_type_box" name="query_vote_type" value="1">

        <label for="vote_type_box">Vote type</label>
      </div>

      <div>
        <label for="tip_id_box">
          Tip
        </label>

        <input type="text" id="tip_id_box" name="query_tip_id">
      </div>

      <%#
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>
      %>

      <button>
        Create vote
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Vote type
        </th>

        <th>
          Tip
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_votes.each do |a_vote| %>
      <tr>
        <td>
          <%= a_vote.id %>
        </td>

        <td>
          <%= a_vote.vote_type %>
        </td>

        <td>
          <%= a_vote.tip_id %>
        </td>

        <td>
          <%= a_vote.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_vote.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_vote.updated_at) %> ago
        </td>

        <td>
          <a href="/votes/<%= a_vote.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
