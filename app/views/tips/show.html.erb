<div>
  <div>
    <h1>
      Tip #<%= @the_tip.id %> details
    </h1>

    <div>
      <div>
        <a href="/tips">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_tip/<%= @the_tip.id %>">
          Delete tip
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Tip text
      </dt>
      <dd>
        <%= @the_tip.tip_text %>
      </dd>

      <dt>
        Tip pic
      </dt>
      <dd>
        <img src="<%= @the_tip.tip_pic %>">
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_tip.user_id %>
      </dd>

      <dt>
        Business
      </dt>
      <dd>
        <%= @the_tip.business_id %>
      </dd>

      <dt>
        Tip type
      </dt>
      <dd>
        <%= @the_tip.tip_type %>
      </dd>

      <dt>
        Upvote count
      </dt>
      <dd>
        <%= @the_tip.upvote_count %>
      </dd>

      <dt>
        Downvote count
      </dt>
      <dd>
        <%= @the_tip.downvote_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_tip.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_tip.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit tip
    </h2>

    <form action="/modify_tip/<%= @the_tip.id %>"  method="post" >
      <div>
        <label for="tip_text_box">
          Tip text
        </label>

        <input type="text" id="tip_text_box" name="query_tip_text" value="<%= @the_tip.tip_text %>">
      </div>

      <div>
        <label for="tip_pic_box">
          Tip pic
        </label>

        <input type="text" id="tip_pic_box" name="query_tip_pic" value="<%= @the_tip.tip_pic %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_tip.user_id %>">
      </div>

      <div>
        <label for="business_id_box">
          Business
        </label>

        <input type="text" id="business_id_box" name="query_business_id" value="<%= @the_tip.business_id %>">
      </div>

      <div>
        <label for="tip_type_box">
          Tip type
        </label>

        <input type="text" id="tip_type_box" name="query_tip_type" value="<%= @the_tip.tip_type %>">
      </div>

      <div>
        <label for="upvote_count_box">
          Upvote count
        </label>

        <input type="text" id="upvote_count_box" name="query_upvote_count" value="<%= @the_tip.upvote_count %>">
      </div>

      <div>
        <label for="downvote_count_box">
          Downvote count
        </label>

        <input type="text" id="downvote_count_box" name="query_downvote_count" value="<%= @the_tip.downvote_count %>">
      </div>

      <button>
        Update tip
      </button>
    </form>
  </div>
</div>

<hr>
