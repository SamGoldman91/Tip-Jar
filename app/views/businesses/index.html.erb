<div>
  <div>
    <h1>
      List of all businesses
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new business
    </h2>

    <form action="/insert_business" method="post">
      <div>
        <label for="business_name_box">
          Business name
        </label>

        <input type="text" id="business_name_box" name="query_business_name">
      </div>

      <div>
        <label for="business_description_box">
          Business description
        </label>

        <input type="text" id="business_description_box" name="query_business_description">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <button>
        Create business
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div class="table-responsive">
    <table class="table table-striped align-middle">
      <thead>
        <tr>
          <th scope="col">
            Business name
          </th>

          <th scope="col">
            Business description
          </th>

          <th scope="col">
            Address
          </th>

          <th scope="col">
            Created at
          </th>

          <th scope="col">
            Updated at
          </th>

          <th scope="col">
          </th>
        </tr>
      </thead>

      <tbody>
        <% @list_of_businesses.each do |a_business| %>
        <tr>
          <td>
            <%= a_business.business_name %>
          </td>

          <td>
            <%= a_business.business_description %>
          </td>

          <td>
            <%= a_business.address %>
          </td>

          <td>
            <%= time_ago_in_words(a_business.created_at) %> ago
          </td>
          <td>
            <%= time_ago_in_words(a_business.updated_at) %> ago
          </td>

          <td>
            <a href="/businesses/<%= a_business.id %>">
              Show details
            </a>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>
